<main>
  <div class="container">
    <div class="col-9">

      <!-- Start Pet Photo Post Section -->
      <div class="card">
        <div class="top">

          <!-- Start User Details and Image Location Section -->
          <div class="userDetails">

            <!-- Link to User Profile Details Page-->
            <div>
              <div class="profilepic">
                <div class="profile_img">
                  <div class="image">
                    <img src="/static/images/person.png" alt="img8" />
                  </div>
                </div>
              </div>
            </div>
            <h3>

              <!-- Link to User Profile Details Page -->
              <p>
                <!-- User's username -->
                {{photoPost.owner.username}}
              </p>
              <!-- photo's location -->
              <span>{{photoPost.location}}</span>

              {{#if user}}
              {{#if photoPost.isOwner}}
              <!-- If the viewer is the creator of the photo -->
              <div class="edit-delete-btns">

                <!-- Edit Pet Photo -->
                <a href="./{{photoPost._id}}/edit">
                  <img class="edit-img" src="/static/images/edit-pen-icon-6.jpg" alt="edit button" />
                </a>

                <!--Delete Pet Photo -->
                <a href="./{{photoPost._id}}/delete">
                  <img class="bin-img" src="/static/images/icon-remove-22.jpg" alt="bin button" />
                </a>
              </div>
              {{/if}}
              {{/if}}

            </h3>
          </div>

        </div>

        <!-- Start Pet Photo -->
        <div class="imgBx">
          <!-- Pet Photo -->
          <img src="{{photoPost.imageUrl}}" alt="post" class="cover" />
        </div>

        <div class="bottom">

          <p class="message">
            <b class="petDescription">{{photoPost.description}}</b>
          </p>

          <!-- Photo description -->
          <div class="pet-details">
            <p class="petName">Name: {{photoPost.name}}</p>
            <p class="petAge">Age: {{photoPost.age}}</p>
          </div>

          {{#if comments}}
          {{#each comments}}
          {{> commentCard}}
          {{/each}}
          {{/if}}

        </div>

        {{#if user}}
        <div class="addComments">
          <!-- Start Add Comments Form -->
          <form method="post" action="">
            <textarea id="comment-textarea" name="" cols="40" rows="10" placeholder="Add comment..."></textarea>
            <!-- Post Comments Button -->
            <button type="submit">Post</button>
          </form>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</main>