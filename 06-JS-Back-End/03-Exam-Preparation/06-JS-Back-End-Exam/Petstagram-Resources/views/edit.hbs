<main>
  <!-- Start Add Photo Section -->
  <div class="editPage">
    <h2>Edit photo</h2>
    <!-- Start Add Photo Form -->
    <form action="" method="post">
      <p>
        <input
          type="text"
          name="name"
          placeholder="Name"
          value="{{photoPost.name}}"
        />
      </p>

      <p>
        <input
          type="number"
          name="age"
          placeholder="Age"
          value="{{photoPost.age}}"
        />
      </p>

      <p>
        <textarea
          type="text"
          name="description"
          placeholder="Description"
        >{{photoPost.description}}</textarea>
      </p>

      <p>
        <input
          type="text"
          name="location"
          placeholder="Location"
          value="{{photoPost.location}}"
        />
      </p>

      <p>
        <input
          type="text"
          name="imageUrl"
          placeholder="Link to image"
          value="{{photoPost.imageUrl}}"
        />
      </p>
      <!-- Add Photo Button -->
      <button class="edit-btn" type="submit">Edit Photo</button>
    </form>
  </div>
</main>