<main>
  <!-- Start Add Photo Section -->
  <div class="createPage">
    <h2>Add photo</h2>
    <!-- Start Add Photo Form -->
    <form action="/photo/addPhoto" method="post">
      <p>
        <input
          type="text"
          name="name"
          value="{{photoPost.name}}"
          placeholder="Name"
        />
      </p>

      <p>
        <input
          type="number"
          name="age"
          value="{{photoPost.age}}"
          placeholder="Age"
        />
      </p>

      <p>
        <textarea
          type="text"
          name="description"
          placeholder="Description"
        >{{photoPost.description}}</textarea>
      </p>

      <p>
        <input
          type="text"
          name="location"
          value="{{photoPost.location}}"
          placeholder="Location"
        />
      </p>

      <p>
        <input
          type="text"
          name="imageUrl"
          value="{{photoPost.imageUrl}}"
          placeholder="Link to image"
        />
      </p>
      <!-- Add Photo Button -->
      <button class="add-btn" type="submit">Add Photo</button>
    </form>
  </div>
</main>